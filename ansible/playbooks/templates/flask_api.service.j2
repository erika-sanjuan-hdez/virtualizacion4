[Unit]
Description=Flask API Application
After=network.target network-online.target # Esperar que la red est√© disponible

[Service]
WorkingDirectory=/opt/app

ExecStart=/opt/app/venv/bin/python api.py

Restart=always
RestartSec=5s
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target